extends ../layouts/common.pug

block content
	h1 
		span.mr-2 Users
		a.btn.btn-primary(href="/users/create") New
	div.d-flex
		form.ml-auto(action="/users/search", method="GET") 
			input.mr-2(type="text", name="q", autofocus, value= q)
			button.btn.btn-primary Search
	table.table
		tr
			th Avatar
			th Name
			th Phone
			th Actions
		each user in users
			tr
				td
					img(src= user.avatar, width="50")
				td= user.name
				td= user.phone 
				td
					a.btn.btn-light(href="/users/" + user.id) View 